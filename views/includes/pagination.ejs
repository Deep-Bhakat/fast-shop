<nav aria-label="Page navigation example" style="margin-top: 2rem;">
  <ul class="pagination  justify-content-center">

  <% if (currentPage != 1 && previousPage != 1){ %>
    <li class="page-item"><a class="page-link" href="?page=1">1</a></li>
      <% } %>
      <% if (hasPreviousPage){ %>
        <li class="page-item"><a class="page-link" href="?page=<%= previousPage %>">Previous</a></li>

       <% } %>
       <li class="page-item active"><a class="page-link" href="?page=<%= currentPage %>"><%= currentPage %></a></li>    
     <% if (hasNextPage){ %>
      <li class="page-item"><a class="page-link" href="?page=<%= nextPage %>">Next</a></li>  
       <% } if (lastPage != currentPage && nextPage != lastPage){ %>
        <li class="page-item"><a class="page-link" href="?page=<%= lastPage %>"><%= lastPage %></a></li>    

         <% } %>
        </ul>
      </nav>
  