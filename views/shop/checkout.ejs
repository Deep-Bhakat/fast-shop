<body>
    <%- include('../includes/navbar.ejs') %>
  
    <div class="container">
        <ul class="list-group" style="width: 35rem; text-align: center; margin: auto;">
          <% products.forEach(p=>{ %>
            
              <li class="list-group-item d-flex justify-content-between align-items-center">

                <h4><%= p.productId.title %> 
                <span style="background-color: blue;" class="badge badge-primary badge-pill"><%= p.quantity %> </span>
                  </h4>
            </li>
          <% });  %>
        </ul>
        <div class="container text-center">
          <h2>Total : <%= totalSum %></h2>
         </div>
         <div class="container text-center">
        
          <button id="order_btn" class="btn btn-primary">Order</button>
          <script src="https://js.stripe.com/v3/"></script>
          <script>
            var stripe=Stripe('pk_test_51JAyAnSBe2ieYIb7nXCbHBoEAG2lkafXUGjDeoaH3dEnFTJ7OgUHiv1WLiySfhXvPyt80jA5ZrByeJtnFTFOvcxL00X2QIfZDc');
            var orderBtn=document.getElementById('order_btn');

            orderBtn.addEventListener('click', function(){
              stripe.redirectToCheckout({
                sessionId: '<%= sessionId %>',
              });
            });
          </script>
        
         </div>
    </div>
  
  
    <%- include('../includes/end.ejs') %>
